
<%= form_for [:category,@post] do |f| %>

  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <%end %>

  
  <div class="field">
    <%= f.label :User_Name %><br />
    <%= f.text_field :name, :value => current_user.name %>
  </div>
  <div class="field">
    <%= f.label :User_Email %><br />
    <%= f.text_field :email, :value => current_user.email %>
  </div> 
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <%= f.hidden_field :category_id, :value => @category.id %>
  <%= f.hidden_field :user_id, :value => current_user.id %>

  <% Tag.all.each do |t| %>
   <%= check_box_tag(:tag_ids, t.id, @post.tags.include?(t), :name => 'post[tag_ids][]') %>
   <%= t.name %><br/>
   <% end %>


  <br><br>

  <%= link_to 'Create Tag', new_tag_path %>
     <br><br>

  
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>