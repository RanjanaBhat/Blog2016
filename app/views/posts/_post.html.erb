<%= div_for post do %>

Posted by, <font color="purple"><%= post.user.email %> </font> 
<h3>
<p>
	<%= link_to post.title, category_post_path(@category, post) %> <br/>
   <%= post.body %>
</p>
</h3>
 
	<font color="grey"> <%= time_ago_in_words(post.created_at) %> ago </font>
<br/>
<%#= link_to 'Show', category_post_path(@category, post) %> 
<% if user_signed_in? %>
<% if current_user.id == post.user_id %> 
<%= link_to edit_category_post_path(@category, post), :title => 'Edit', :rel => 'tooltip', class: "btn btn-info" do %>
    <span class="glyphicon glyphicon-edit"></span> 
<% end %>	| 
<%= link_to category_post_path(@category, post), :title => 'Delete', :rel => 'tooltip', method: :delete, data: { confirm: 'Are you sure?' }, remote: true, class: "btn  btn-danger" do %>
          <span class="glyphicon glyphicon-trash"></span>
          <% end %>
 <% end %>
 <% end %>
<% end %>
