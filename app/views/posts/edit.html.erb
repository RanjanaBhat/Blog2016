<h1>Editing post</h1>

<%= form_for([:category, @post]) do |f| %>
<div class="field">
	<%= f.label :name %> <br/>
	<%= f.text_field :name %> 
</div>
<div class="field">
	<%= f.label :email %> <br/>
	<%= f.text_field :email %> 
</div>
<div class="field">
	<%= f.label :title %> <br/>
	<%= f.text_field :title %> 
</div>
<div class="field">
	<%= f.label :body %> <br/>
	<%= f.text_area :body %> 
</div>
<% Tag.all.each do |t| %>
   <%= check_box_tag(:tag_ids, t.id, @post.tags.include?(t), :name => 'post[tag_ids][]') %>
   <%= t.name %><br/>
   <% end %>
<p><%= f.submit %>
<% end %>

