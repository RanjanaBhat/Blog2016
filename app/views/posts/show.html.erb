<%- model_class = Post -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:Category_name) %>:</strong></dt>
  <dd><%= @post.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:User_email) %>:</strong></dt>
  <dd><%= @post.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Post_title) %>:</strong></dt>
  <dd><%= @post.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Post_body) %>:</strong></dt>
  <dd><%= @post.body %></dd>
  <dt><strong><%#= model_class.human_attribute_name(:tag) %></strong></dt>
  <dd><%#= @post.tag.name %></dd>
  
  <dt><strong><%#= model_class.human_attribute_name(:category_id) %></strong></dt>

  <dd><%#= @post.category_id %></dd>
  <dt><strong><%#= model_class.human_attribute_name(:user_id) %></strong></dt>
  <dd><%#= @post.user_id %></dd>
  <dt><strong><%#= model_class.human_attribute_name(:permalink) %></strong></dt>
  <dd><%#= @post.permalink %></dd>
</dl>
<%#= f.hidden_field :category_id, :value => @category.id %>
<%#= f.hidden_field :post_id, :value => @post.id %>

<%= link_to t('.back', :default => t("helpers.links.back")),
              posts_path, :class => 'btn btn-default'  %>
  <% if user_signed_in? %>
<% if current_user.id == @post.user_id %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_post_path(@post), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              post_path(@post),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

<% end %>
<% end %>
<h2> Comments </h2>
<%= render :partial => @post.comments %>

No. of Comments: <%= @post.comments.count %>


<h4> Leave a Comment! </h4>

<%= form_for ([@post.category, @post, @post.comments.build]) do |f| %>
<div class="field">
<%= f.label :User_Name %><br/>
<%= f.text_field :name, :value => current_user.name%>
</div> 
<div class="field">
<%= f.label :body %><br/>
<%= f.text_area :body %>
</div> 

<%= f.hidden_field :post_id, :value => @post.id %>
<%= f.hidden_field :user_id, :value => current_user.id %>
<p> <%= f.submit %> </p>
<% end %>

