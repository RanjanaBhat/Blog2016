<%- model_class = Post -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:Post_id) %></th>
      <th><%= model_class.human_attribute_name(:User_name) %></th>
      <th><%= model_class.human_attribute_name(:User_email) %></th>
      <th><%= model_class.human_attribute_name(:Post_title) %></th>
      <th><%= model_class.human_attribute_name(:Post_body) %></th>
      <th><%= model_class.human_attribute_name(:Category_name) %></th>
      <th><%#= model_class.human_attribute_name(:user_id) %></th>
      <th><%#= model_class.human_attribute_name(:permalink) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%#=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= link_to post.name, post_path(post) %></td>
        <td><%= post.email %></td>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.category_id %></td>
        <td><%#= post.user_id %></td>
        <td><%#= post.permalink %></td>
        <td><%=l post.created_at %></td>
        <% if user_signed_in? %>
        <td>

          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_post_path(post), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      post_path(post),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to t('.back', :default => t("helpers.links.back")),
root_path, :class => 'btn btn-default'  %>
<% if user_signed_in? %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_post_path,
            :class => 'btn btn-primary' %>
<% end %>