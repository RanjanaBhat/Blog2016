<%- model_class = Tag -%>
<div class="panel panel-info">
  <div class="panel-heading" ><h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1></div>
</div>

<table class="table table-condensed">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
    </tr>
  </thead>
  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.id %></td>
        <td><%= link_to tag.name,tag_path(tag) %></td>
        <td><%=l tag.created_at %></td>
        <% if user_signed_in? %> 
        <td>
          <%= link_to edit_tag_path(tag), :title => 'Edit', :rel => 'tooltip', class: "btn btn-info btn-xs" do %>
            <span class="glyphicon glyphicon-edit"></span> 
          <% end %>
          <%= link_to tag_path(tag), :title => 'Delete', :rel => 'tooltip', method: :delete, data: { confirm: 'Are you sure?' }, remote: true, class: "btn btn-xs btn-danger" do %>
          <span class="glyphicon glyphicon-trash"></span>  
          <% end %>
        </td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to root_path, :title => 'Back', :rel => 'tooltip', class: "btn btn-default" do %>
    <span class="glyphicon glyphicon-step-backward"></span> 
<% end %>
<%= link_to new_tag_path, :title => 'New Tag', :rel => 'tooltip', class: "btn btn-info" do %>
    <span class="glyphicon glyphicon-new-window"></span> 
<% end %>

<ul class="pagination">
  <li><%=link_to '1',Category%></li>
  <li><%=link_to '2',Post%></li>
  <li><%=link_to '3',Comment%></li>
  <li><%=link_to '4',Tag%></li> 
</ul>