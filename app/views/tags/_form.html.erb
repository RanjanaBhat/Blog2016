<%= form_for @tag, :html => { :class => "form-horizontal tag" } do |f| %>
  <% if @tag.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@tag.errors.count, "error") %> prohibited this tag from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @tag.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :title => 'Save', :rel => 'tooltip', :class => 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-disk-saved"></span>  
          <% end %>
      <%= link_to tags_path, :title => 'Cancel', :rel => 'tooltip', class: "btn btn-default" do %>
              <span class="glyphicon glyphicon-cancel"></span>  
          <% end %>
    </div>
  </div>
<% end %>