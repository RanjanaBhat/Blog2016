
<%- model_class = Category -%>
<body>
  <div class="panel panel-info">
  <div class="panel-heading" ><h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1></div>
</div>

<table class="table table-condensed" >
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:Category_id) %></th>
      <th><%= model_class.human_attribute_name(:Category_name) %></th>
      <th><%#= model_class.human_attribute_name(:permalink) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%#=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%=  category.id %></td>
        <td><%= link_to category.name, category_path(category) %></td>
        <td><%#= category.permalink %></td>
        <td><%=l category.created_at %></td>
        <% if user_signed_in? %> 
        <td>
          <%= link_to edit_category_path(category), :title => 'Edit', :rel => 'tooltip', class: "btn btn-info btn-xs" do %>
              <span class="glyphicon glyphicon-edit"></span> 
          <% end %>
          <%= link_to category_path(category), :title => 'Delete', :rel => 'tooltip', method: :delete, data: { confirm: 'Are you sure?' }, remote: true, class: "btn btn-xs btn-danger" do %>
          <span class="glyphicon glyphicon-trash"></span>
          <% end %>
        </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</body>
<%#= f.hidden_field :user_id, :value => current_user.id %>

<%= link_to home_demo_path, class: "btn btn-default", :title => 'Back', :rel => 'tooltip' do %>
    <span class="glyphicon glyphicon-step-backward"></span> 
<% end %>
<%= link_to new_category_path, :title => 'New Category', :rel => 'tooltip', class: "btn btn-primary" do %>
    <span class="glyphicon glyphicon-new-window"></span>
<% end %>


