<% @comment = Comment.new %>
<% @category = Category.find_by_permalink(params[:id]) %>
<%= form_for [:category,:post, @comment], :html => { :class => "form-horizontal comment" } do |f| %>
<% if @comment.errors.any? %>
<div id="error_expl" class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title"><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h3>
  </div>
  <div class="panel-body">
    <ul>
      <% @comment.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>

<div class="form-group">
  <%= f.label :name, :class => 'control-label col-lg-2' %>
  <div class="col-lg-10">
    <%= f.text_field :name, :class => 'form-control' %>
  </div>
  <%=f.error_span(:name) %>
</div>
<div class="form-group">
  <%= f.label :body, :class => 'control-label col-lg-2' %>
  <div class="col-lg-10">
    <%= f.text_area :body, :class => 'form-control' %>
  </div>
  <%=f.error_span(:body) %>
</div>
<div class="form-group">
  <%= f.label :post_id, :class => 'control-label col-lg-2' %>
  <div class="col-lg-10">
    <%= f.number_field :post_id, :class => 'form-control' %>
  </div>
  <%=f.error_span(:post_id) %>
</div>
<div class="form-group">
  <%= f.label :user_id, :class => 'control-label col-lg-2' %>
  <div class="col-lg-10">
    <%= f.number_field :user_id, :class => 'form-control' %>
  </div>
  <%=f.error_span(:user_id) %>
</div>
<div class="form-group">
  <%#= f.label :permalink, :class => 'control-label col-lg-2' %>
  <div class="col-lg-10">
    <%#= f.text_field :permalink, :class => 'form-control' %>
  </div>
  <%#=f.error_span(:permalink) %>
</div>

<div class="form-group">
  <div class="col-lg-offset-2 col-lg-10">
    <%= f.submit nil, :title => 'Save', :rel => 'tooltip', :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-disk-saved"></span>  
    <% end %>
    <%= link_to comments_path, :title => 'Cancel', :rel => 'tooltip', class: "btn btn-default" do %>
    <span class="glyphicon glyphicon-cancel"></span> 
    <% end %>
  </div>
</div>
<% end %>
