<style>
table {
    width:50%;
}
table, th, td {
    border: 1px solid black;
    border-collapse: collapse;
}
th, td {
    padding: 5px;
    text-align: left;
}
table#t01 tr:nth-child(even) {
    background-color: #eee;
}
table#t01 tr:nth-child(odd) {
   background-color:#fff;
}
table#t01 th  {
    background-color: black;
    color: white;
}
</style>
<h1>Listing posttags</h1>

<table id="t01">
  <tr>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posttags.each do |posttag| %>
  <tr>
    <td><%= link_to 'Show', posttag %></td>
    <td><%= link_to 'Edit', edit_posttag_path(posttag) %></td>
    <td><%= link_to 'Destroy', posttag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

